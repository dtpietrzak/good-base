{
  "database": {
    "dataDirectory": "./data",
    "maxFileSize": 100,
    "enableBackups": true,
    "backupDirectory": "./backups",
    "backupInterval": 24
  },
  "server": {
    "port": 5555,
    "host": "localhost",
    "enableCors": true,
    "corsOrigins": ["*"],
    "requestTimeout": 30,
    "maxBodySize": 10
  },
  "auth": {
    "required": false,
    "defaultToken": "dev-token-12345",
    "validationMethod": "static"
  },
  "index": {
    "defaultLevel": "match",
    "optimizationThreshold": 10000,
    "autoOptimize": true,
    "enableCache": true,
    "maxCacheSize": 50
  },
  "logging": {
    "level": "info",
    "enableFileLogging": false,
    "logDirectory": "./logs",
    "maxLogFileSize": 10,
    "logRetention": 5,
    "enableRequestLogging": true
  },
  "cli": {
    "historyFile": "./.good_history",
    "historySize": 1000,
    "enableColors": true,
    "prompt": "good-base-> ",
    "authTimeoutMinutes": 30
  }
}